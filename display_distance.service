[Unit]
Description=Python script for displaying distance on LED Matrix display
After=network-online.target

[Service]
Type=exec
PIDFile=/var/run/display_distance.pid
StandardOutput=journal+console
ExecStart=/home/pi/distance_display/venv/bin/python -u /home/pi/distance_display/display_distance.py --serve-in-foreground
KillSignal=SIGINT
Restart=always
User=pi
Group=pi

[Install]
WantedBy=multi-user.target
